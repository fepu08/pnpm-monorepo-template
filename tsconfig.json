{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "noImplicitAny": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.js",
    "packages/*/test/**/*.ts",
    "packages/*/test/**/*.js",
    "**/tailwind.config.js",
    "**/vite.config.ts",
    "eslint.config.mts"
  ],
  "exclude": ["**/assets/**/*", "node_modules", "dist", "coverage"]
}
